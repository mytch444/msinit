#!/bin/mksh

cd /var/run && /usr/bin/find . -name "*.pid" -delete
cd /var/lock && /usr/bin/find . ! -type d -delete

/etc/rc.d/lo start
/etc/rc.d/dbus start
sleep 1
/etc/rc.d/acpid start
/etc/rc.d/alsa start

sleep 2
for i in `/sbin/ifconfig -l`; do
	/sbin/ifconfig $i up
done
sleep 2

/etc/rc.d/wicd start
/etc/rc.d/tor start

/etc/rc.d/lowbatteryd start
([ 1 == `cat /sys/class/power_supply/AC/online` ] && sh /etc/acpi/actions/ac.sh || sh /etc/acpi/actions/battery.sh) &

